{
  "compilerOptions": {
    // Module system
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,

    /* Lit-specific requirements */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    /* Type declarations */
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,

    /* Code quality */
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false /* downgrade 'Variable never read' to ESlint 'warning' */,
    "noUnusedParameters": true,

    /* Source maps */
    "declarationMap": true,
    "sourceMap": true,

    /* Dev helper & aliases */
    "rootDir": "./src",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.ts"]
}
