{
  "name": "@liebherr2/plnext",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "sideEffects": [
    "*.css",
    "*.scss",
    "dist/index.js",
    "dist/components/**/*.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./custom-elements.json": "./custom-elements.json",
    "./react-types": "./dist/custom-elements.d.ts",
    "./styles/props.css": "./dist/styles/props.css",
    "./styles/fonts.css": "./dist/styles/fonts.css",
    "./components/*": {
      "import": "./dist/components/*",
      "types": "./dist/components/*"
    }
  },
  "scripts": {
    "analyze": "cem analyze",
    "build": "rimraf dist && npm run analyze && vite build && tsc --emitDeclarationOnly && npm run build:styles",
    "build:ci": "npm run build && npm run pack",
    "build:styles": "sass src/styles/props.scss dist/styles/props.css --no-source-map && sass src/styles/fonts.css dist/styles/fonts.css --no-source-map",
    "build:tgz": "npm run build:ci",
    "dev": "concurrently -k -n VITE,TSC,SASS \"vite build --watch\" \"tsc --emitDeclarationOnly -w\" \"npm:dev:styles\"",
    "dev:styles": "nodemon --watch src --ext scss --exec \"npm run build:styles\"",
    "format": "prettier --write \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "lint": "eslint \"src/**/*.ts\"",
    "pack": "npm pack",
    "prepare:ci": "npm ci",
    "prepare:dev": "npm install",
    "prepare:tgz": "npm run prepare:dev",
    "serve": "web-dev-server --node-resolve --open",
    "test": "web-test-runner \"dist/test/**/*.test.js\" --node-resolve"
  },
  "peerDependencies": {
    "lit": "^3"
  },
  "dependencies": {
    "lit": "^3"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@open-wc/testing": "^4.0.0",
    "typescript": "~5.8.0"
  },
  "customElements": "custom-elements.json"
}
