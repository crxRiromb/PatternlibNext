{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    /* Bundler-Optimierungen für Vite */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    /* Striktheit & Typ-Sicherheit */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Build-Optionen für die Bibliothek */
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    /* Aliase */
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
