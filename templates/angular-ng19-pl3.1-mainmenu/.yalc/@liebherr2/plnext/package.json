{
  "name": "@liebherr2/plnext",
  "version": "0.0.1",
  "description": "Web-Komponenten-Bibliothek basierend auf Lit.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/components/*"
    }
  },
  "scripts": {
    "analyze": "cem analyze",
    "build": "vite build && tsc --emitDeclarationOnly && npm run build:styles",
    "build:styles": "sass src/styles/exports.scss dist/styles/exports.css --no-source-map",
    "build:watch": "vite build --watch",
    "build-storybook": "storybook build",
    "format": "prettier --write \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "lint": "eslint 'src/**/*.ts'",
    "prebuild": "npm run analyze",
    "serve": "web-dev-server --node-resolve --open",
    "storybook": "storybook dev -p 6006",
    "test": "web-test-runner 'dist/test/**/*.test.js' --node-resolve",
    "yalc:publish": "npm run build && yalc publish --push",
    "yalc:watch": "nodemon --watch src --ext ts,scss --exec \"npm run yalc:publish\""
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "customElements": "custom-elements.json",
  "yalcSig": "31ac036a16d6df37b1f0f5581794238a"
}
