{
  "compilerOptions": {
    /* Grundkonfiguration */
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "./src",
    "esModuleInterop": true,

    /* Deklarationsdateien */
    "declarationMap": true,
    "sourceMap": true,

    /* Lit-spezifische Anforderungen */
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    /* Modulauflösung für Vite */
    "moduleResolution": "bundler",
    "resolveJsonModule": true /* new */,

    /* Code-Qualität */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false /* downgrade 'Variable never read' to 'warning' */,
    "noFallthroughCasesInSwitch": true,

    /* Typ-Deklarationen erzeugen */
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,

    /* Aliase für Importe */
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.ts"]
}
