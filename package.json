{
  "name": "@liebherr2/plroot",
  "private": true,
  "scripts": {
    "build:package:lit:ci": "cd packages/lit && npm install && npm run build:ci && cd ../..",
    "build:packages:ng:ci": "cd packages/lit && npm install && npm run build:ci && cd .. && cd angular-wrapper && npm install && npm run build:ci && cd ../..",
    "build:packages:react:ci": "cd packages/lit && npm install && npm run build:ci && cd .. && cd react-wrapper && npm install && npm run build:ci && cd ../..",
    "clean:build": "tsx ./scripts/clean.ts build",
    "clean:install": "tsx ./scripts/clean.ts install && rimraf ./node_modules",
    "clean": "tsx ./scripts/clean.ts all",
    "dev:lit": "cd packages/lit && npm run dev",
    "dev:storybook": "cd apps/storybook && npm run dev",
    "dev:app:ng:ci": "cd apps/angular-ng19-pl3.1-mainmenu && npm run dev:tgz",
    "dev:app:react:ci": "cd apps/react-19-pl3.1-mainmenu && npm run dev:tgz",
    "format": "prettier --write .",
    "lint": "eslint \"{packages,apps}/**/*.{ts,tsx,js,jsx}\"",
    "prepare:app:ng:ci": "cd apps/angular-ng19-pl3.1-mainmenu && npm run prepare:dev:tgz",
    "prepare:app:react:ci": "cd apps/react-19-pl3.1-mainmenu && npm run prepare:dev:tgz",
    "prepare:lit:dev": "cd packages/lit && npm run prepare:dev",
    "prepare:lit:ci": "cd packages/lit && npm run prepare:ci",
    "prepare:storybook:dev": "cd apps/storybook && npm run prepare:dev"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@web/dev-server": "^0.4.2",
    "@web/test-runner": "^0.18.0",
    "concurrently": "^9.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "tsx": "^4.19.3",
    "typescript": "^5.9.2",
    "vite": "^7.0.0"
  }
}
