{
  "name": "@liebherr2/plnext",
  "version": "0.0.1",
  "description": "Web-Komponenten-Bibliothek basierend auf Lit.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./*": {
      "import": "./dist/*"
    }
  },
  "scripts": {
    "analyze": "cem analyze",
    "prebuild": "npm run analyze",
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "yalc:push": "npm run build && yalc publish --push",
    "yalc:watch": "nodemon --watch src --ext ts,scss --exec \"npm run yalc:push\"",
    "serve": "web-dev-server --node-resolve --open",
    "lint": "eslint 'src/**/*.ts'",
    "test": "web-test-runner 'dist/test/**/*.test.js' --node-resolve",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md,html,css,scss}\""
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/web-components-vite": "^9.0.17",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@web/dev-server": "^0.4.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sass": "^1.71.1",
    "storybook": "^9.0.17",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "customElements": "custom-elements.json"
}
