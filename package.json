{
  "name": "pl-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r --stream build",
    "dev:lit": "pnpm --filter @liebherr2/plnext dev",
    "dev:react-wrapper": "pnpm --filter @liebherr2/reactnext dev",
    "dev:angular-wrapper": "pnpm --filter @liebherr2/angularnext dev",
    "dev:react-app": "pnpm --filter react-19-pl3.1-mainmenu dev",
    "dev:angular-app": "pnpm --filter angular-standalone-mainmenu dev",
    "dev:storybook": "pnpm --filter storybook dev",
    "lint": "pnpm -r lint",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@types/node": "^22.0.0",
    "@web/dev-server": "^0.4.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.0.0"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.8.4"
    }
  }
}
