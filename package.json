{
  "name": "@liebherr2/plnext",
  "version": "0.0.1",
  "description": "Web-Komponenten-Bibliothek basierend auf Lit.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./react-types": "./dist/custom-elements.d.ts",
    "./styles/exports.css": "./dist/styles/exports.css",
    "./styles/fonts.css": "./dist/styles/fonts.css",
    "./*": {
      "import": "./dist/components/*"
    }
  },
  "scripts": {
    "analyze": "cem analyze",
    "build": "vite build && tsc --emitDeclarationOnly && npm run build:styles",
    "build:styles": "sass src/styles/exports.scss dist/styles/exports.css --no-source-map && sass src/styles/fonts.css dist/styles/fonts.css --no-source-map",
    "build:watch": "vite build --watch",
    "build-storybook": "storybook build",
    "format": "prettier --write \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md,html,css,scss}\"",
    "lint": "eslint 'src/**/*.ts'",
    "prebuild": "npm run analyze",
    "serve": "web-dev-server --node-resolve --open",
    "storybook": "storybook dev -p 6006",
    "storybook:clear-cache": "rimraf node_modules/.vite",
    "test": "web-test-runner 'dist/test/**/*.test.js' --node-resolve",
    "yalc:publish": "npm run build && yalc publish --push",
    "yalc:watch": "nodemon --watch src --ext ts,scss --exec \"npm run yalc:publish\""
  },
  "dependencies": {
    "lit": "^3.1.3",
    "lit-html": "^3.1.3",
    "lit-element": "^3.1.3"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.2",
    "@open-wc/testing": "^4.0.0",
    "@storybook/addon-docs": "^9.0.17",
    "@storybook/addon-toolbars": "^9.0.8",
    "@storybook/web-components-vite": "^9.0.17",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@web/dev-server": "^0.4.2",
    "@web/test-runner": "^0.18.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.71.1",
    "storybook": "^9.0.17",
    "typescript": "^5.3.3",
    "vite": " ^7.0.0"
  },
  "customElements": "custom-elements.json"
}
